<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendrier Cliquable</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }
        td, th {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }
        td:hover {
            background-color: #f1f1f1;
            cursor: pointer;
        }
    </style>
</head>
<body>

<h1>Calendrier des Permanences</h1>
<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Texte Associé</th>
        </tr>
    </thead>
    <tbody id="calendarTable">
        <!-- Les données seront ajoutées ici dynamiquement -->
    </tbody>
</table>

<p id="info"></p>

<script>
    const SHEET_ID = '1Y4zpeQJgkalrj32uYIF613sT-Nox5SHzXCduXCFEFTw'; // Remplace par ton ID de feuille
    const API_KEY = 'AIzaSyBYM19vbTPAi49sXzjqPJsFzhRsZHVKql8'; // Ta clé API

    // Récupérer les données de Google Sheets
    async function fetchData() {
        const response = await fetch(`https://sheets.googleapis.com/v4/spreadsheets/${SHEET_ID}/values/Feuille1!A:B?key=${API_KEY}`);
        const data = await response.json();
        return data.values;
    }

    // Afficher les données dans le tableau
    function displayData(data) {
        const calendarTable = document.getElementById('calendarTable');
        calendarTable.innerHTML = ''; // Effacer le tableau avant d'ajouter de nouvelles données

        if (data && data.length > 0) {
            data.forEach(row => {
                const tr = document.createElement('tr');
                const dateCell = document.createElement('td');
                const textCell = document.createElement('td');

                dateCell.textContent = row[0] || 'Aucune date';
                textCell.textContent = row[1] || 'Aucun texte associé';

                // Ajouter un gestionnaire d'événements pour afficher les informations
                dateCell.addEventListener('click', () => {
                    document.getElementById('info').textContent = textCell.textContent || 'Aucun texte associé pour cette date';
                });

                tr.appendChild(dateCell);
                tr.appendChild(textCell);
                calendarTable.appendChild(tr);
            });
        } else {
            const tr = document.createElement('tr');
            const td = document.createElement('td');
            td.colSpan = 2;
            td.textContent = 'Aucune donnée trouvée';
            tr.appendChild(td);
            calendarTable.appendChild(tr);
        }
    }

    // Charger les données au démarrage
    fetchData().then(data => displayData(data)).catch(error => console.error('Erreur de récupération des données :', error));
</script>

</body>
</html>
